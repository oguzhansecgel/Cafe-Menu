@model List<ResultUserDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

<div class="col-lg-12">
	<div class="active-member">
		<div class="table-responsive">
			<table class="table table-xs mb-0">
				<thead>
					<tr>
						<th>#</th>
						<th>Kullanıcı Adı</th>
						<th>Kullanıcı Soyadı</th>
						<th>Kullanıcı Sil</th>
						<th>Kullanıcı Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td class=" rounded-circle mr-1" alt="">@count</td>
							<td class=" rounded-circle mr-1" alt="">@item.Name</td>
							<td class=" rounded-circle mr-1" alt=""> @item.Surname</td>
							<td><a href="/AdminUser/DeleteAppUser/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
							<td><a href="/AdminUser/UpdateUser/@item.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Kaydı</a>

