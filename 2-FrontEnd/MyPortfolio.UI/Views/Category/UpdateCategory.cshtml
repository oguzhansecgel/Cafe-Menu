@model UpdateCategoryVM

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="CategoryID" />
    <label>Başlık</label>
    <input type="text" asp-for="CategoryName" class="form-control" />
    <span asp-validation-for="CategoryName" class="text-warning"></span>
    <br />
    <button class="btn btn-outline-success">Kategori Güncelle</button>
</form>