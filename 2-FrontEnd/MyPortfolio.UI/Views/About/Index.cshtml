@model List<UpdateAboutVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@*admin paneli*@
<table class="table table-bordered">
	<tr>
		<th>Başlık</th>
		<th>Başlık</th>
		<th>Güncelle</th>
		<th>Sil</th>
	</tr>
	@foreach (var item in Model)
	{
		{
			<tr>
				<th>@item.Title</th>
				<th>@item.Description</th>
				<td><a href="/About/UpdateAbout/@item.AboutID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
				<td><a href="/About/DeleteAbout/@item.AboutID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
			</tr>
		}
	}
</table>