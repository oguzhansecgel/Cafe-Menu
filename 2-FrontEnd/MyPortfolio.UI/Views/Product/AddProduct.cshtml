@model AddProductDto
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    @* <span asp-validation-for="Name" class="text-danger"></span>*@
    <br />
    <label>Ürün Fiyatı</label>
    <input type="text" asp-for="ProductPrice" class="form-control" />
    @* <span asp-validation-for="Name" class="text-danger"></span>*@
    <br />
     <label>Ürün Fotoğrafı</label>
    <input type="text" asp-for="ProductImage" class="form-control" />
    @* <span asp-validation-for="Name" class="text-danger"></span>*@
    <br />
     <label>Ürün Açıklaması</label>
    <input type="text" asp-for="ProductDescription" class="form-control" />
    @* <span asp-validation-for="Name" class="text-danger"></span>*@
    <br />
     <label>Ürün Kategorisi</label>
    <input type="text" asp-for="CategoryID" class="form-control" />
    @* <span asp-validation-for="Name" class="text-danger"></span>*@
    <br />
    <button class="btn btn-primary">Ürünü Ekle</button>
</form>
